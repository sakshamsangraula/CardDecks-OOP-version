package card;

public class Card {

    public String learner = "lastname, firstname";
    private String face;
    private String suit;
    private int value;

 
    public Card(int value, String suit) {
        this.value= value;
        this.suit= suit;
        
        if (value >=2 && value<=10){
            face = value + "";
        }
        if (value ==1){
            face = "A";
        }
        if (value ==11){
            face ="J";
        }
        if (value ==12){
            face = "Q";
        }
        if (value ==13){
            face ="K";
        }

    }
   
    public int getValue() {
        return value;

    }

    
    public String toString() {
        return face + suit;

    }

}
